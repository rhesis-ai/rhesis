{
    "client": "pg",
    "connection": {
      "host": "${DB_HOST}",
      "user" : "${DB_USER}",
      "password" : "${DB_PASSWORD}",
      "database" : "${DB_DATABASE}"
    },
    "pool": {
      "min": 2,
      "max": 25
    },    
    "connectionTimeoutMillis": 60000,
    "idleTimeoutMillis": 30000   
  
}